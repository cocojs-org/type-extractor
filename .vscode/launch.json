    "version": "0.2.0",
    "configurations": [
        {
            "name": "build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}", // 项目根目录
            "runtimeExecutable": "pnpm", // 包管理器（npm/yarn/pnpm）
            "runtimeArgs": ["run", "build"], // 执行的脚本名
            "console": "integratedTerminal", // 在集成终端输出日志
            "skipFiles": ["<node_internals>/**"]
        },
        {
            "name": "jest",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}", // 项目根目录
            "runtimeExecutable": "pnpm", // 包管理器（npm/yarn/pnpm）
            "runtimeArgs": ["run", "jest"], // 执行的脚本名
            "console": "integratedTerminal", // 在集成终端输出日志
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}